            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="@color/colorKo">
        <TextView
                android:id="@+id/player1Reach"
                android:text="立直"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="25dp"
                android:gravity="end"
                android:layout_marginEnd="80dp"
                android:textColor="#ffffffff"
                android:typeface="monospace"
                android:visibility="gone"
                android:layout_gravity="end"/>
        <TextView
                android:text="@string/player1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="#ffffffff"
                android:layout_gravity="center_vertical"/>

        <TextView
                android:id="@+id/player1Points"
                android:text="250"
                android:layout_width="190dp"
                android:layout_height="80dp"
                android:textSize="50dp"
                android:textAlignment="viewEnd"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:textColor="#ffffffff"
                android:typeface="monospace"
                android:layout_gravity="right"/>
        <TextView
                android:text="00"
                android:layout_width="190dp"
                android:layout_height="80dp"
                android:textSize="20dp"
                android:textAlignment="viewEnd"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"
                android:textColor="#ffffffff"
                android:typeface="monospace"
                android:layout_gravity="right"/>
        <TextView
                android:layout_gravity="right"
                android:layout_marginTop="50dp"
                android:layout_marginRight="160dp"
                android:textColor="#ffffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player1PointChange"
                android:textSize="30dp"
                android:visibility="gone"/>
        <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:id="@+id/PlayerSub1"
                android:minWidth="25px"
                android:minHeight="25px"
                android:visibility="gone">
            <Button
                    android:onClick="pointLoseK"
                    android:text="K"
                    android:textSize="25dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    app:rippleColor="#ff000000"
                    app:strokeColor="#ff000000"
                    app:backgroundTint="#ff000000"
                    android:backgroundTint="#ffde0000"/>
            <Button
                    android:onClick="pointLoseH"
                    android:text="H"
                    android:textSize="25dp"
                    android:layout_width="55dp"
                    android:layout_marginTop="45dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    app:rippleColor="#ff000000"
                    app:strokeColor="#ff000000"
                    app:backgroundTint="#ff000000"
                    android:backgroundTint="#ffde0000"/>
            <Button
                    android:onClick="pointGainK"
                    android:text="k"
                    android:textSize="25dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="62dp"
                    app:rippleColor="#ff000000"
                    app:strokeColor="#ff000000"
                    app:backgroundTint="#ff000000"
                    android:backgroundTint="#ff00af00"/>
            <Button
                    android:onClick="pointGainH"
                    android:text="H"
                    android:textSize="25dp"
                    android:layout_width="55dp"
                    android:layout_marginTop="45dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="62dp"
                    app:rippleColor="#ff000000"
                    app:strokeColor="#ff000000"
                    app:backgroundTint="#ff000000"
                    android:backgroundTint="#ff00af00"/>
            <Button
                    android:onClick="reach"
                    android:text="立直"
                    android:textSize="20dp"
                    android:layout_width="80dp"
                    android:layout_marginTop="55dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="120dp"
                    app:rippleColor="#ff000000"
                    app:strokeColor="#ff000000"
                    app:backgroundTint="#ff000000"
                    android:backgroundTint="#EE9A00"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
